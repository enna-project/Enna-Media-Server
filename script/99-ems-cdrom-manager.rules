# Run script which will configure the CDROM and send signal to EMS (inserted or removed)
# Put this file in /etc/udev/rules.d if you have udev.
# Inserted
SUBSYSTEM=="block", KERNEL=="sr0", ACTION=="change",  ENV{ID_CDROM}=="1", RUN+="/usr/sbin/ems_cdrom_changed.sh '%E{DEVNAME}' 'inserted'"
# Removed
SUBSYSTEM=="block", KERNEL=="sr0", ACTION=="change",  ENV{ID_CDROM}=="0", RUN+="/usr/sbin/ems_cdrom_changed.sh '%E{DEVNAME}' 'removed'"
